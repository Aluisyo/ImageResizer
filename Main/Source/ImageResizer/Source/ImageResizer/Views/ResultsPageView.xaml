<UserControl x:Class="BriceLambson.ImageResizer.Views.ResultsPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="360">
    <StackPanel>

        <StackPanel Margin="11">

            <TextBlock FontSize="12pt" Foreground="#003399">Resize completed with problems</TextBlock>

            <!-- TODO: Error icon -->
            <TextBlock Margin="0,11,0,0">Image Resizer was unable to resize one or more pictures.</TextBlock>
            <!-- TODO: List filenames and problems -->
            
        </StackPanel>

        <Border Background="{x:Static SystemColors.ControlBrush}" BorderBrush="{x:Static SystemColors.ControlLightBrush}" BorderThickness="0,1,0,0">
            <StackPanel Margin="11" Orientation="Horizontal" HorizontalAlignment="Right">

                <Button Width="75" Command="{Binding CloseCommand}">Close</Button>

            </StackPanel>
        </Border>

    </StackPanel>
</UserControl>
    